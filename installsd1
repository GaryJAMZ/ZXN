#!/bin/bash
pacman -Sy
parted /dev/sd$1 mklabel bsd
dd bs=1k count=1 if=/dev/zero of=/dev/sd$1
partprobe
sgdisk /dev/sd$1 -g
a=$(sgdisk /dev/sd$1 -F)
sgdisk /dev/sd$1 -n 1:$a:200M
sgdisk /dev/sd$1 -t 1:ef00
b=$(sgdisk /dev/sd$1 -F)
c=$(sgdisk /dev/sd$1 -E)
sgdisk /dev/sd$1 -n 2:$b:$c
echo "ConfiguraciÃ³n de cifrado con luks"
cryptsetup -y -v luksFormat /dev/sd$12
echo "cifrado finalizado"
cryptsetup open /dev/sd$12 $2
mkfs.ext4 /dev/mapper/$2
mkfs.fat -F32 /dev/sd$11
mount /dev/mapper/$2 /mnt
mkdir /mnt/boot
mount /dev/sd$11 /mnt/boot
pacstrap /mnt base linux-zen linux-firmware vim $3
genfstab -U /mnt >> /mnt/etc/fstab
chmod +x installsd2 install3 installrootcfg
mv installsd2 /mnt
mv install3 /mnt
mv rec.zip /mnt
mv desktopwall.zip /mnt
mv desk.zip /mnt
mv installrootcfg /mnt
arch-chroot /mnt
